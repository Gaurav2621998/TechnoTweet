<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tool:contentPadding="3dp"
    android:id="@+id/cardview2"
    tool:cardCornerRadius="5dp"
    tool:cardElevation="3dp"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1">

            <TextView
                android:id="@+id/profileimage"
                android:text="BUS 1"
                android:textSize="40sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileimage"
                android:layout_margin="1dp">

                <ImageButton
                    android:id="@+id/callingbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#67D08B"
                    android:src="@drawable/ic_call_black_40dp" />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="RS VYAS"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/position"
                android:layout_marginTop="2dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                tools:text="Position"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/position"
                tools:text=" 9099909999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:id="@+id/email"
                tools:text="rsvyas@gmail.com"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>