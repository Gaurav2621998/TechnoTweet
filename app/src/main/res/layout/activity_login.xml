<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#563D81"
    tools:context=".activities.Login">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✍ ️twitter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/googlesans"
        android:textSize="26sp"
        android:textColor="#9575cd"
        android:layout_margin="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sigin_to_college_app"
                android:id="@+id/signInText"
                android:textColor="#d1c4e9"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signInText"
            android:gravity="center"
            android:weightSum="2"
            android:id="@+id/linear_email">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collegeid"
                android:hint="@string/college_id"
                android:maxLength="10"
                android:inputType="textImeMultiLine"
                android:gravity="end"
                android:layout_weight="1"
                android:textColorHint="#9575cd"
                android:textColor="@android:color/white"
                android:fontFamily="@font/googlesans"
                android:textSize="24sp"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="@string/technonjr_org"
                android:fontFamily="@font/googlesans"
                android:textSize="24sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:layout_height="1dp"
            android:layout_below="@id/linear_email"
            android:background="#d1c4e9"
            />
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/viewSnack"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5B99FE"
        android:text="Sign In ➜ "
        android:id="@+id/sigIn"
        android:fontFamily="@font/googlesans"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>